#!/bin/bash
# Setup project context

export p=$HOME/Projects/Hammer

alias bl='cd $p/bin && ls *.py'
alias ce='x cmd edit'
alias cl='x cmd list'
alias console='x server console'
alias de='x doc edit'
alias deploy='x server deploy'
alias hammer=". $p/bin/bashrc"
alias restart='x server restart'
alias todo='c todo'

function be {
    e $p/bin/${1/.py/}.py
}

cat $p/bin/welcome

# Path variable
export PATH=\
$p/bin:\
/bin:\
/sbin:\
/usr/bin:\
/usr/local/bin:\
/opt/local/bin

echo $PATH
export _OLD_VIRTUAL_PATH=$PATH


[ -f ~/Tools/env-python27/bin/activate ] &&
. ~/Tools/env-python27/bin/activate
echo "Active python = `which python`"
echo

cd $p


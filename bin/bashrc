#!/bin/bash
# Setup project context

export p=$HOME/Projects/Hammer

alias bl='cd $p/bin && ls *.py'
alias ce='x cmd edit'
alias cl='x cmd list'
alias cmd='x cmd'
alias console='x server console'
alias doc='x doc'
alias de='x doc edit'
alias dj='cd $p && python ./manage.py'
alias dl='x doc list'
alias deploy='x server deploy'
alias ft='python $p/bin/functional_tests.py'
alias log='x log'
alias rt='cd $p/bin && python remote_tests.py'
alias pt='cd $p/bin && python page_tests.py'
alias hammer=". $p/bin/bashrc"
alias restart='x server restart'
alias server='x server'
alias todo='x todo'
alias tl='x tool list'
alias te='x tool edit'
alias tlist='x script tst list'
alias tout='x script tst output'
alias trun='x script tst run'
alias tres='x script tst results'
alias tlike='x script tst like'

alias web='x web'

function be {
    e $p/bin/${1/.py/}.py
}

cat $p/bin/welcome

# Path variable
export PATH=\
$p/bin:\
/bin:\
/sbin:\
/usr/bin:\
/usr/local/bin:\
/opt/local/bin

echo $PATH
export _OLD_VIRTUAL_PATH=$PATH


[ -f ~/Tools/env-python27/bin/activate ] &&
. ~/Tools/env-python27/bin/activate
echo "Active python = `which python`"
echo

cd $p


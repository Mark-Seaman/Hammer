#!/usr/bin/env python
# Execute a python script as a command

from os import system,environ
from os.path import exists,join
from sys import argv


if argv[1:]:
    args = ' '.join(argv[1:])
    path = join(environ['p'], 'bin', argv[1]+'.py')

    if exists(path):
        print("Invoke "+argv[1]+'.py '+str(argv[2:]))
        system('python %s %s' % (path, args))
    else:
        print('Script not found '+path)

else:
    print('usage: c cmd [args]')
    print('Example: c server ip')

